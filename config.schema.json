{
  "pluginAlias": "egreatPlugin",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "This plugin is provided by [carlosgamezvillegas](https://github.com/carlosgamezvillegas/)",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Egreat"
      },
      "ip": {
        "title": "IP Address",
        "type": "string",
        "placeholders": "192.168.1.1",
        "required": true
      },
      "pollingInterval": {
        "title": "Polling Interval (milliseconds)",
        "type": "number",
        "placeholders": "1000",
        "required": false
      },
      "modelName": {
        "title": "Model",
        "type": "string",
        "placeholders": "A5",
        "required": false
      },
      "manufacture": {
        "title": "Manufacturer",
        "type": "string",
        "placeholders": "Egreat",
        "required": false
      },
      "serialN": {
        "title": "Serial Number",
        "type": "string",
        "placeholders": "12345678900",
        "required": false
      },
      "newPlatformUUID": {
        "title": "New Platform UUID",
        "type": "boolean",
        "required": false
      },
      "mediaButtons": {
        "title": "Add Media Remote Control buttons (Next, Previous, Forward, Rewind)",
        "type": "boolean",
        "required": false
      },
      "movieControl": {
        "title": "Add Movie Progress as a dimmer",
        "type": "boolean",
        "required": false
      },
      "cursorUpB": {
        "title": "Add the Cursor Up button",
        "type": "boolean",
        "required": false
      },
      "cursorDownB": {
        "title": "Add the Cursor Down button",
        "type": "boolean",
        "required": false
      },
      "cursorLeftB": {
        "title": "Add the Cursor Left button",
